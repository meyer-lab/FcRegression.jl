pipeline {
  agent { label 'docker' }
  environment {
    JULIA_NUM_THREADS = '12'
  }
  options {
    timeout(time: 1, unit: 'HOURS')
    parallelsAlwaysFailFast()
  }
  stages {
    stage('Clean') { steps { sh 'make clean && git submodule update --init --recursive' } }
    stage('Test') {
      steps {
        sh 'make coverage.cob'
        cobertura autoUpdateHealth: false, autoUpdateStability: false, coberturaReportFile: 'coverage.cob', enableNewApi: true, failUnhealthy: false, failUnstable: false, maxNumberOfBuilds: 0, onlyStable: false, sourceEncoding: 'ASCII', zoomCoverageChart: false
      }
    }
    stage('Build Figures') {
      steps {
	    sh 'make figures'
        lock ('manubot') {
          sh 'make output/manuscript.md'
        }
        archiveArtifacts artifacts: '*.svg', onlyIfSuccessful: true
        publishHTML([allowMissing:false, alwaysLinkToLastBuild:false, keepAll:true, reportDir:'output', reportFiles:'manuscript.html', reportName:'Depletion Paper'])
      }
    }
  }
  post {
    always {
      cleanWs cleanWhenFailure: false, cleanWhenNotBuilt: false, cleanWhenUnstable: false
    }
  }
}
